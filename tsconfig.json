{
  "extends": "@tsconfig/react-native/tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "target": "ESNext",
    "lib": ["ES2017", "DOM"],
    "module": "commonjs",
    "sourceMap": true,
    "checkJs":true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "types": [
      "jest",
      // "cypress",
      // "@testing-library/cypress",
      "@types/styled-components-react-native"
    ],
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "useUnknownInCatchVariables": false
  },
  "include": ["src/**/*.tsx", "tests/**/*.ts","./src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
